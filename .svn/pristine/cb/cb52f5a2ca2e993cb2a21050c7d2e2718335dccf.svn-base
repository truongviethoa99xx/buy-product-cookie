.form-flex {
    display: flex;
    justify-content: space-between;
    background-color: #fff;
    width: 100%;
    min-height: 400px;
}

.flex-item {
    display: flex;
    justify-content: space-between;
}

.flex-ct {
    display: flex;
    justify-content: center;
    align-items: center;
}

.card-header-icon {
    font-size: 30px;
    margin-left: 20px;
}

.header__notify-info-hot, .header__notify-info-hot-item {
    display: flex;
    align-items: center;
    color: #b4b5c3;
    justify-content: space-between;
}

.header__notify-info-hot {
    position: relative;
    top: 10px;
}

.header__notify-img {
    width: 60px;
    height: 60px;
    border-radius: 5px;
    margin-left: 10px;
    border: 1px solid #000;
}

.productbox {
    background-color:#ffffff;
    padding:10px;
    margin-bottom:10px;
    -webkit-box-shadow: 0 8px 6px -6px  #999;
    -moz-box-shadow: 0 8px 6px -6px  #999;
    box-shadow: 0 8px 6px -6px #999;
    }
    
    .producttitle {
    font-weight:bold;
    padding:5px 0 5px 0;
    }
    
    .productprice {
    border-top:1px solid #dadada;
    padding-top:5px;
    }
    
    .pricetext {
    font-weight:bold;
    font-size:1.4em;
    }

    .cart-item {
        position: relative;
    }

    .span-title {
        position: absolute;
        right: 4px;
        width: 20px;
        height: 20px;
        text-align: center;
        border-radius: 50px;
        background-color: rgb(190, 62, 62);
        color: #fff;
    }