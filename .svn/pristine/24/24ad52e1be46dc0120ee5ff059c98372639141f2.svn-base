.app {
    overflow: hidden;
}

a:hover {
    text-decoration: none;
}

.header {
    /* position: fixed;
    right: 0;
    top: 0;
    left: 0; */
    /* background-image: linear-gradient(to bottom, #f53d2d, #fe6532); */
    background-color: #415165;
    height: var(--header-height);  
}

.header__navbar {
    display: flex;
    justify-content: space-between;
}

.header__navbar-list {
    list-style: none;
    padding-left: 0;
    margin-top: 4px;
    margin-bottom: 0;
}

.header__navbar-item {
    position: relative;
    margin: 0 8px;
    min-height: 24px;
    z-index: 3;
}

.header__navbar-item, 
.header__navbar-item-link {
    display: inline-block;
    font-size: 1.3rem;
    font-weight: 300;
    color: var(--white-color);
    text-decoration: none;
}

.header__navbar-item:hover, 
.header__navbar-item-link:hover,
.header__navbar-icon-link:hover,
.header__navbar-user:hover {
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
}


.header__navbar-item, 
.header__navbar-item-link,
.header__navbar-list {
    display: inline-flex;
    align-items: center;
}

.header__navbar-item--has-qr:hover .header__qr {
    display: block;
}

.header__navbar-item--has-notify:hover .header__notify {
    display: block;
}

.header__navbar-icon-link {
    text-decoration: none;
    color: var(--white-color);
}

.header__navbar-icon-link:nth-child(2) {
    margin-left: 4px;
}

.header__navbar-icon {
    font-size: 2.0rem;
    margin: 0 4px;
}

.header__navbar-label--no-pointer {
    cursor: text;
    color: var(--white-color);
}
/* QR code */
.header__qr {
    background-color: var(--white-color);
    width: 180px;
    padding: 2px;
    position: absolute;
    left: 0;
    top: calc(100% + 4px);
    border-radius: var(--border-radius);
    display: none;
    z-index: 1;
    box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.1);
    animation: fadeIn 0.1s linear;
}

.header__qr::after {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    top: -10px;
    width: 100%;
    height: 20px;
}

.header__qr-img {
    width: 100%;
}

.header__qr-apps {
    display: flex;
    justify-content: space-between;
}

.header__qr-app-link:first-child {
    margin-left: 10px;
}

.header__qr-app-link:last-child {
    margin-right: 10px;
}

.header__qr-download-img {
    height: 16px;
}

/* Notification */
.header__notify {
    position: absolute;
    top: calc(100% + 4px);
    right: 0;
    width: 404px;
    z-index: 1;
    border-radius: var(--border-radius);
    background-color: var(--white-color);
    border: 1px solid #D3D3D3;
    transform-origin: calc(100% - 32px) top;
    animation: headerNotifyGrowth ease-in 0.2s;
    will-change: opacity, transform;
    display: none;
    /* box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.1); */
}
/* Mũi tên tam giác khung không báo */
.header__notify::before {
    content: "";
    border-style: solid;
    border-width: 20px 28px;
    border-color: transparent transparent var(--white-color) transparent;
    position: absolute;
    top: -30px;
    right: 0;
}
/* Cầu nối khung thông báo */
.header__notify::after {
    content: "";
    display: block;
    width: 102px;
    height: 20px;
    position: absolute;
    right: 0;
    top: -10px;
}

@keyframes headerNotifyGrowth {
    from {
        opacity: 0;
        transform: scale(0);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

.header__notify-header {
    height: 40px;
    background-color: var(--white-color);
}

.header__notify-header h3 {
    color: #999;
    margin: 0 0 0 12px;
    font-weight: 400;
    font-size: 1.4rem;
    line-height: 40px;
    user-select: none;
    cursor: default;
}

.header__notify-list {
    padding-left: 0;
    list-style: none;
}

.header__notify-item {
    display: flex;
}

.header__notify-item:hover {
    background-color: #f5f5f5;
}

.header__notify-item--viewed {
    background-color: rgba(238, 75, 43, 0.08);
}

.header__notify-link {
    text-decoration: none;
    display: flex;
    width: 100%;
    padding: 12px;
}

.header__notify-img {
    width: 48px;
    object-fit: contain;
}

.header__notify-info {
    margin-left: 12px;
}

.header__notify-name {
    display: block;
    font-size: 1.4rem;
    color: var(--text-color);
    font-weight: 500;
    line-height: 1.8rem;
}

.header__notify-decription {
    display: block;
    font-size: 1.2rem;
    color: #756F6E;
    margin-top: 4px;
}

.header__notify-footer {
    text-align: center;
    height: 40px;
    background-color: rgba(0, 0, 0, 0.01);
}

.header__notify-footer-link {
    text-decoration: none;
    display: block;
    color: var(--text-color);
    font-size: 1.4rem;
    line-height: 40px;
}

/* Profile css */
.header__navbar-user {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--white-color);
    position: relative;
}

.header__navbar-user:hover .header__navbar-user-menu {
    display: block;
}

.header__navbar-user-img {
    height: 22px;
    width: 22px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 4px;
    border: 1px solid #D3D3D3;
}

.header__navbar-user-menu {
    position: absolute;
    top: calc(100% + 4px);
    z-index: 1;
    right: 0;
    padding-left: 0;
    list-style: none;
    width: 160px;
    background-color: var(--white-color);
    border-radius: var(--border-radius);
    border: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow: 0 1px 2px  #e0e0e0;
    transform-origin: calc(100% - 50px) top;
    animation: headerNotifyGrowth linear 0.2s;
    display: none;
}

.header__navbar-user-menu::before {
    content: "";
    border-style: solid;
    border-width: 20px 30px;
    border-color: transparent transparent var(--white-color) transparent;
    position: absolute;
    right: 20px;
    top: -30px;
    z-index: -1;
}

.header__navbar-user-menu::after {
    content: "";
    width: 80%;
    height: 20px;
    position: absolute;
    top: -10px;
    right: 0;
}

.header__navbar-user-item {
    list-style: none;
}

.header__navbar-user-link {
    display: block;
    text-decoration: none;
    color: var(--text-color);
    padding: 12px 16px;
    font-size: 1.4rem;
    font-weight: 500;
    cursor: pointer;
}

.header__navbar-user-link:first-child {
    border-top-left-radius: var(--border-radius);
    border-top-right-radius: var(--border-radius);
}

.header__navbar-user-link:last-child {
    border-bottom-left-radius: var(--border-radius);
    border-bottom-right-radius: var(--border-radius);
}

.header__navbar-user-link:hover {
    background-color: #fafafa;
    color: #21ae9a;
}
/* Authen modal */
.auth-form {
    width: 400px;
}

.auth-form__container {
    padding: 0 30px;
}

.auth-form__heading {
    font-size: 2.0rem;
    color: #222;
    font-weight: 500;
}

.auth-form__group {
    margin: 30px 0 14px 0;
}

.auth-form__input {
    height: 40px;
    width: 100%;
    margin-bottom: 16px;
    padding: 0 12px;
    font-size: 1.4rem;
    line-height: 40px;
    border-radius: var(--border-radius);
    border: 1px solid var(--border-color); 
    outline: none;
}

.auth-form__input:focus {
    border-color: #888;
}

.auth-form__input-pw {
    position: relative;
}

.auth-form__input-pw-eye--close {
    position: absolute;
    right: 50px;
    top: 31.5%;
    color: #ccc;
    font-size: 1.4rem;
}

.auth-form__input::placeholder { /* chạy tốt trên Chrome, Firefox, Opera, Safari 10.1+ */
    color: rgba(0, 0, 0, 0.26);
    opacity: 1; /* Firefox */
}

.auth-form__input::-ms-input-placeholder { /* chạy trên Internet Explorer 10-11 */
    color: var(--text-color);
}

.auth-form__input::-ms-input-placeholder { /* chạy trên Microsoft Edge */
    color: var(--text-color);
}

.auth-form__controls {
    padding: 0;
}

.auth-form__controls-btn {
    text-transform: uppercase;
    width: 100%;
    margin-bottom: 30px;
}

.auth-form__or-separate {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
}

.auth-form__or {
    font-size: 1.2rem;
    text-transform: uppercase;
    color: #ccc;
    padding: 0 16px;
}

.auth-form__or-separate--left {
    height: 1px;
    width: 100%;
    background-color: #ccc;
    flex: 1;
}

.auth-form__or-separate--right {
    height: 1px;
    width: 100%;
    background-color: #ccc;
    flex: 1;
}


.auth-form__socials {
    display: flex;
    justify-content: center;
    align-items: center;
}

.btn.btn--with-icon {
    display: flex;
    align-items: center;   
    justify-content: center;
    border: 1px solid rgba(0,0,0,.26);
    padding: 0 2px;
    border-radius: var(--border-radius);    
    font-size: 1.4rem;
    width: 100%;
    color: var(--text-color);
}

.btn--with-icon-img {
    width: 22px;
    height: 22px;
    object-fit: contain;
    margin-right: 4px;
}

.auth-form__other-login {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: -18px;
    margin-bottom: 10px;
    font-size: 1.2rem;
}

.auth-form__other-login-link {
    text-decoration: none;
    color: #05a;
}

.auth-form__aside {
    padding: 32px 25px 0;
    margin-right: 5px;
}

.auth-form__policy-text {
    font-size: 1.2rem;
    color: rgba(0,0,0,.87);
    text-align: center;
    margin-top: 0;
    margin-bottom: 0;
}

.auth-form__policy-link {
    text-decoration: none;
    color: var(--primary-color);
}

.auth-form__switch {
    margin: 30px;
    text-align: center;
    font-size: 1.4rem;
}

.auth-form__login-link-quest {
    color: rgba(0,0,0, 0.26);
}

.auth-form__switch-btn {
    text-decoration: none;
    color: var(--primary-color);
}

/* Header with search */
.header-with-search {
    height: var(--header-with-search-height);
    display: flex;
    align-items: center;
    margin: 0 8px;
}

.header__mobile-search-icon {
    font-size: 2.6rem;
    color: var(--white-color);
    padding: 0 12px;
    margin: 8px 0 0 -8px;
    display: none;
}

.header__logo {
    width: 200px;
}

.header__logo-img {
    width: 150px;
}

.header__logo-link {
    text-decoration: none;
    color: transparent;
    display: block;
    line-height: 0;
}

.header__search-checkbox:checked ~ .header__search{
    display: flex;
}

.header__search {
    height: 40px;
    display: flex;
    align-items: center;
    flex: 1;
    border-radius: var(--border-radius);
    background-color: var(--white-color);
    z-index: 2;
}

.header__search-input-wrap {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    flex: 1;
}

.header__search-input {
    height: 34px;
    font-size: 1.4rem;
    flex: 1;
    margin: 0 8px;
    border: none;
    outline: none;
    border-right: 1px solid var(--border-color);
}

.header__search-input:focus ~.header__search-history{
    display: block;
}

.header__search-input::placeholder {
    font-size: 1.4rem;
}

.header__search-menu {
    width: 148px;
    height: 40px;
    display: flex;
    align-items: center;
    color: rgba(0, 0, 0, 0.9);
    position: relative;
    cursor: pointer;
}

.header__search-menu-select {
    font-size: 1.4rem;
    position: relative;
    padding: 0 10px;
}

.header__search-menu:hover .header__search-menu-wrap{
    display: block;
}

.header__search-menu-icon {
    font-size: 2.0rem;
    color: rgba(0, 0, 0, 0.6);
}


.header__search-btn {
    width: 60px;
    height: 34px;
    margin-right: 3px;
    background-color: var(--primary-color);
    border: none;
}

.header__search-btn:hover {
    background-color: #fb6445;
    cursor: pointer;
}

.header__search-btn-icon {
    font-size: 1.8rem;
    margin-top: 4px;
    color: var(--white-color);
}

.header__sort-bar {
    position: fixed;
    top: var(--header-height);
    left: 0;
    right: 0;
    height: var(--header-sort-bar-height);
    background-color: var(--white-color);
    align-items: center;
    list-style: none;
    margin: 0;
    padding-left: 0;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    display: none;
}

.header__sort-item {
    flex: 1;
}

.header__sort-item:first-child .header__sort-link::after{
    display: none;
}

.header__sort-item--active .header__sort-link{
   color: var(--primary-color);
   border-bottom: 4px solid var(--primary-color);
}

.header__sort-link {
    text-decoration: none;
    color: var(--text-color);
    font-size: 1.4rem;
    display: block;
    height: 100%;
    line-height: var(--header-sort-bar-height);
    text-align: center;
    position: relative;
}

.header__sort-link::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    height: 60%;
    border-left: 1px solid #e5e5e5;
    transform: translateY(-50%);
}

/* Cart css */
/* No cart */
.header__cart {
    width: 150px;
    text-align: center;
    position: relative;
}

.header__cart::before {
    content: "";
    width: 60%;
    height: 30px;
    position: absolute;
    top: calc(100% - 8px);
    right: 50px;
}

.header__cart-wrap {
    position: relative;
    display: inline-block;
    padding: 0 12px;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
}

.header__cart-wrap:hover .header__cart-list{
    display: block; 
}

.header__cart-icon {
    margin-top: 6px;
    font-size: 3.0rem;
    color: var(--white-color);
    cursor: pointer;
}

.header__cart-quantity {
    position: absolute;
    right: 4px;
    top: 4px;
    display: block;
    height: 16px;
    width: 20px;
    background-color: var(--white-color);
    border: 1px solid #444;
    border-radius: 40%;
    color:#555;
    font-size: 1.2rem;
    text-align: center;
}

.header__cart-quantity p {
    position: relative;
    top: -2px;
}

.header__cart-list {
    position: absolute;
    top: calc(100% + 4px);
    right: 0;
    background-color: var(--white-color);
    box-shadow: 0 1px 5px #999;
    width: 400px;
    border-radius: var(--border-radius);
    transform-origin: calc(100% - 35px) 0;
    animation: headerNotifyGrowth linear 0.2s;
    display: none;
    cursor: default;
    z-index: 2;
}

.header__cart-list::after {
    content: "";
    border-style: solid;
    border-width: 20px 26px;
    border-color: transparent transparent  var(--white-color) transparent;
    position: absolute;
    right: -1px;
    top: -28px;
    cursor: pointer;
}

.header__cart-list--no-cart .header__cart-no-cart-img,
.header__cart-list--no-cart .header__cart-no-cart-text {
    display: block;
}

.header__cart-no-cart-img {
    margin-top: 60px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: auto;
    width: 100px;
    height: 100px;
    display: none;
}

.header__cart-no-cart-text {
    text-align: center;
    font-size: 1.4rem;
    text-transform: capitalize;
    color: var(--text-color);
    display: none;
    margin-bottom: 60px;
}

/* Has cart */
.header__cart-heading {
    display: flex;
    align-items: center;
    font-size: 1.4rem;
    color: #999;
    font-weight: 300;
    height: 40px;
    margin: 0 10px;
    text-transform: capitalize;
}

.header__cart-list-item {
    list-style: none;
    max-height: 52vh;
    overflow-y: auto;
    margin: 0;
    padding: 0;
}

.header__cart-item {
    width: 100%;
    display: flex;
    align-items: center;
}

.header__cart-item:hover {
    background-color: rgb(223, 219, 219, 0.5);
}

.header__cart-item-img {
    background-size: cover;
    background-repeat: no-repeat;
    border: 1px solid rgba(0,0,0,.09);
    width: 44px;
    height: 44px;
    margin: 12px;
}

.header__cart-item-info {
    width: 100%;
}

.header__cart-item-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-align: left;
}

.header__cart-item-name {
    margin: 0;
    font-size: 1.4rem;
    font-weight: 200;
    flex: 1;
    cursor: text;
    line-height: 1.6rem;
    height: 3.2rem;
    overflow: hidden;
    display: block;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.header__cart-item-buy {
    margin: 12px 12px 12px 16px;
    color: var(--primary-color);
    cursor: text;
}

.header__cart-item-price {
    font-size: 1.4rem;
}

.header__cart-item-multiply {
    font-size: 1.2rem;
    color: #757575;
    margin-left: 4px;
}

.header__cart-item-quantity {
    font-size: 1.2rem;
    color: #757575;
}

.header__cart-item-body {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-right: 12px;
}

.header__cart-item-description {
    font-size: 1.3rem;
    color: #757575;
    cursor: text;
}

.header__cart-item-remove {
    font-size: 1.3rem;
}

.header__cart-item-remove:hover {
    cursor: pointer;
    color: var(--primary-color);
}

.header__cart-view-cart-btn {
    float: right;
    margin: 12px 12px 16px 12px ;
    width: 150px;
}


/* search history */
.header__search-history {
    position: absolute;
    left: 0;
    top: calc(100% + 4px);
    background-color: var(--white-color);
    width: calc(100% - 16px);
    border-radius: var(--border-radius);
    box-shadow: 0 1px 5px #999;
    display: none;
}

.header__search-history-title {
    margin: 8px 12px;
    font-size: 1.4rem;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.4);
}

.header__search-history-list {
    list-style: none;
    padding-left: 0;
    margin-bottom: 0;
}

.header__search-history-item {
    text-decoration: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 1.4rem;
    padding: 8px 12px;
}

.header__search-history-item:first-child {
    border-top-left-radius: var(--border-radius);
    border-top-right-radius: var(--border-radius);
}

.header__search-history-item:last-child {
    border-bottom-left-radius: var(--border-radius);
    border-bottom-right-radius: var(--border-radius);
}

.header__search-history-item:hover {
    background-color: #f5f5f5;
    cursor: pointer;
}

.header__search-history-icon {
    font-size: 2.0rem;
    padding: 4px;
}

.header__search-history-icon:hover {
    color: var(--primary-color);
    cursor: pointer;
}

/* search-menu-wrap */
.header__search-menu-wrap {
    position: absolute;
    top: calc(100% + 4px);
    left: 0;
    background-color: var(--white-color);
    width: 100%;
    border-radius: var(--border-radius);
    box-shadow: 0 1px 5px #999;
    display: none;
    z-index: 2;
}

.header__search-menu-wrap::before {
    content: "";
    width: 100%;
    height: 20px;
    position: absolute;
    top:-10px;
    right: 0;
}

.header__search-menu-list {
    list-style: none;
    padding-left: 0;
    margin: 0;
}

.header__search-menu-item {
    font-size: 1.4rem;
    padding: 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    min-height: 44px;
}

.header__search-menu-item:first-child {
    border-top-left-radius: var(--border-radius);
    border-top-right-radius: var(--border-radius);
}

.header__search-menu-item:last-child {
    border-bottom-left-radius: var(--border-radius);
    border-bottom-right-radius: var(--border-radius);
}

.header__search-menu-item:hover {
    background-color: #f5f5f5;
    cursor: pointer;
}

.header__search-menu-item-icon {
    color: var(--primary-color);
    font-size: 2.0rem;
}

/* app__container */
.app__container {
    background-color: #F5F5F5;
    min-height: 600px;
}


.app__content {
    padding-top: 36px;
}

.category {
    background-color: var(--white-color);
    border-radius: var(--border-radius);
}

.category__heading {
    font-size: 1.6rem;
    color: var(--text-color);
    display: flex;
    align-items: center;
    padding: 12px 16px;
    border-bottom: 1px solid rgba(0,0,0,0.05);
    margin: 0;
}

.category__heading-icon {
    font-size: 1.8rem;
    margin-right: 4px;
    position: relative;
    bottom: 1px;
}

.category-list {
    padding: 0 0 8px 0;
    list-style: none;
    margin-left: 12px;
}

.category-item {
    position: relative;
    cursor: pointer;
}

.category-item--active .category-item__link{
    color: var(--primary-color);
}

.category-item--active .category-item__link::before {
    content: "";
    position: absolute;
    left: 8px;
    top: 50%;
    transform: translateY(-50%);
    border: 4px solid;
    border-color: transparent transparent transparent var(--primary-color);
}

.category-item__link {
    display: block;
    font-size: 1.4rem;
    text-decoration: none;
    color: var(--text-color);
    padding: 8px 16px;
}

.category-item__link:hover {
    color: var(--primary-color);
}
/* mobile category */

.mobile-category {
    display: none;
}

.mobile-category__list {
    display: flex;
    list-style: none;
    padding-left: 0;
    max-width: 100%;
    overflow-x: auto;
}

.mobile-category__list::-webkit-scrollbar {
    display: none;
}

.mobile-category__item {
    border-radius: var(--border-radius);
    margin-right: 10px;
    flex-shrink: 0;
}

.mobile-category__item:nth-of-type(3n + 1) {
    background-color: #87AFD8;
}

.mobile-category__item:nth-of-type(3n + 2) {
    background-color: #76C9BD;
}

.mobile-category__item:nth-of-type(3n + 3) {
    background-color: #88CF81;
}

.mobile-category__link {
    --line-height: 2rem;
    display: block;
    text-decoration: none;
    color: var(--white-color);
    font-size: 1.4rem;
    line-height: var(--line-height);
    height: calc(var(--line-height) * 2);
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-align: center;
    width: 110px;
    font-weight: 300;
    user-select: none;
    -webkit-user-select: none;
    padding: 0 6px;
}


/* Home sort + filter */

.home-filter {
    display: flex;
    align-items: center;
    padding: 12px 22px; 
    border-radius: var(--border-radius);
    background-color: #ededed;
}

.home-filter__label {
    font-size: 1.4rem;
    color: #555;
    margin-right: 16px;
}

.home-filter__btn {
    margin-right: 12px;
}

.home-filter__page {
    display: flex;
    align-items: center;
}

.select-input:hover .select-input__list {
    display: block;
}

.select-input__list {
    width: 100%;
    position: absolute;
    top: calc(100% - 6px);
    right: 0;
    background-color: var(--white-color);
    border-radius: var(--border-radius);
    box-shadow: 0 1px 5px #999;
    animation: fadeIn 0.1s linear;
    display: none;
}

.select-input__list::before {
    content: "";
    width: 100%;
    height: 20px;
    position: absolute;
    top:-10px;
    right: 0;
}

.select-input__list {
    list-style: none;
    padding: 8px 0;
}

.select-input__link {
    display: block;
    padding: 8px 16px;
    cursor: pointer;
    text-decoration: none;
    font-size: 1.4rem;
    color: var(--text-color);
}

.select-input__link:hover {
    cursor: pointer;
    color: var(--primary-color);
}

.home-filter__page {
    margin-left: auto;
    display: flex;
    align-items: center;
}

.home-filter__page-num {
    margin-right: 16px;
    font-size: 1.4rem;
}

.home-filter__page-current {
    color: var(--primary-color);
}

.home-filter__page-control {
    border-radius: var(--border-radius);
    overflow: hidden;
    display: flex;
    width: 72px;
    height: 36px;
}

.home-filter__page-btn {
    display: inline-block;
    flex: 1;
    background-color: var(--white-color);
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    background-color: transparent;
    border: 1px solid rgba(0,0,0,0.2);
}

.home-filter__page-btn:hover {
    background-color: #fff;
    border: 1px solid #eee;
}

.home-filter__page-btn--disable {
    cursor: default;
    background-color: var(--white-color);
    color: #ccc;
    border: 1px solid #eee;
}

.home-filter__page-icon {
    font-size: 1.6rem;
}

/* Product */

.home-product-item {
    text-decoration: none;
    color: transparent;
    display: block;
    margin-top: 10px;
    background-color: var(--white-color);
    border-bottom-left-radius: var(--border-radius);
    border-bottom-right-radius: var(--border-radius);
    box-shadow: 0 0.0625rem 0.125rem 0 rgb(0 0 0 / 10%);
    position: relative;
    transition: transform 0.1s linear;
    will-change: transform;
    
}

.home-product-item__brand {
    color: var(--text-color);
    font-size: 1.6rem;
    font-weight: 500;
}

.home-product-item:hover {
    transform: translateY(-1px);
    box-shadow: 0 1px 20px 0 rgb(0, 0, 0, 0.05);
}

.home-product-item__img {
    padding-top: 100%;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}

.home-product-item__name {
    font-size: 1.4rem;
    color: var(--text-color);
    line-height: 1.8rem;
    height: 3.6rem;
    margin: 10px 10px 6px;
    /* Tạo dấu 3 chấm giới hạn văn bản */
    overflow: hidden;
    display: block;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    /* text-overflow: ellipsis;
    white-space: nowrap; */
}

.home-product-item__price {
    display: flex;
    align-items: baseline;
    flex-wrap: wrap;
}

.home-product-item__price-old {
    margin-left: 10px;
    font-size: 1.3rem;
    text-decoration: line-through;
    color: var(--text-color);
}

.home-product-item__price-current {
    margin-left: 10px;
    font-size: 1.6rem;
    color: var(--primary-color);
}

.home-product-item__action {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 6px 10px 0;
}

.home-product-item__like {
    font-size: 1.4rem;
}

.home-product-item__like-icon-fill {
    font-size: 1.4rem;
    color: red;
    display: none;
}

.home-product-item__like--liked .home-product-item__like-icon-fill {
    display: inline-block;
}

.home-product-item__like--liked .home-product-item__like-icon-empty {
    display: none;
}

.home-product-item__rating {
    font-size: 1.0rem;
    color: #ccc;
    margin-left: auto;
}

.home-product-item__start-gold {
    color: var(--gold-color);
}

.home-product-item__sold {
    color: var(--text-color);
    font-size: 1.2rem;
    margin-left: 6px;
}

.home-product-item__origin {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 6px 10px 0 10px;
    color: #595959;
    font-size: 1.2rem;
    font-weight: 300;
    padding-bottom: 10px;
}

.home-product-item__favourite {
    position: absolute;
    top: 10px;
    left: -4px;
    color: var(--primary-color);
    background-color: currentColor;
    border-top-right-radius: var(--border-radius);
    border-bottom-right-radius: var(--border-radius);
    font-size: 1.2rem;
    padding: 0 4px;
}
/* tạo phần gấp nhãn yêu thích */
.home-product-item__favourite::before {
    content: "";
    border-top: 3px solid currentColor;
    border-left: 3px solid transparent;
    position: absolute;
    filter: brightness(40%);
    top: 100%;
    left: 0;
}

.home-product-item__label {
    color: var(--white-color);
}

.home-product-item__sale-off {
    position: absolute;
    top: 0;
    right: 4px;
    width: 40px;
    height: 36px;
    text-align: center;
    background-color: rgba(255,212,36,.9);
}

.home-product-item__sale-off::before {
    content: "";
    position: absolute;
    top: 100%;
    right: 0;
    border-width: 0 20px 6px;
    border-style: solid;
    border-color: transparent rgba(255,212,36,.9) transparent rgba(255,212,36,.9);
}

.home-product-item__sale-off-percent {
    font-size: 1.3rem;
    line-height: 1.3rem;
    color: #EE4D2D;
    font-weight: 600;
    position: relative;
    top: 4px;
}

.home-product-item__sale-off-label {
    color: var(--white-color);
    font-size: 1.4rem;
    line-height: 1.4rem;
    text-transform: uppercase;
    position: relative;
    top: 3px;
}   

.home-product__pagination {
    margin: 36px 0 32px 0;
    padding-left: 0;
}

/* Footer */
.footer {
    border-top: 4px solid #ee4d2d;
}

.footer__heading {
    font-size: 1.2rem;
    text-transform: uppercase;
    color: rgba(0,0,0,.54);;
    margin-bottom: 20px;
    margin-top: 40px;
}

.footer-list {
    list-style: none;
    padding: 0;
}

.footer-item__link {
    text-decoration: none;
    color: rgba(0,0,0,.54);
    font-size: 1.2rem;
    display: flex;
    align-items: center;
}

.footer-item {
    text-transform: capitalize;
    padding-bottom: 12px;
}

.footer-item__link:hover {
    color: var(--primary-color);
}

.footer-item__icon {
    font-size: 1.6rem;
    color: var(--text-color);
    margin-right: 8px;
}

.footer__qr {
    display: flex;
    align-items: center;
}

.footer__qr-img {
    width: 100px;
    height: 100px;
    margin-right: 20px;
    border: 1px solid #ccc;
}

.footer__qr-download-img {
    width: 90px;
    margin: 4px 0;
}

.copyright {
    margin-top: 24px;
    width: 100%;
    padding: 8px 0;
    background-color: #F5F5F5;
    display: flex;
    justify-content: center;
    align-items: center;
    color: rgba(0, 0, 0, 0.65);
    font-size: 1.2rem;
}

#toast {
    position: fixed;
    top: 32px;
    right: 32px;
    z-index: 999999;
  }
  
  .toast {
    display: flex;
    align-items: center;
    background-color: #fff;
    border-radius: 2px;
    padding: 20px 0;
    min-width: 400px;
    max-width: 450px;
    border-left: 4px solid;
    box-shadow: 0 5px 8px rgba(0, 0, 0, 0.08);
    transition: all linear 0.3s;
  }
  
  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(calc(100% + 32px));
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes fadeOut {
    to {
      opacity: 0;
    }
  }
  
  .toast--success {
    border-color: #47d864;
  }
  
  .toast--success .toast__icon {
    color: #47d864;
  }
  
  .toast--info {
    border-color: #2f86eb;
  }
  
  .toast--info .toast__icon {
    color: #2f86eb;
  }
  
  .toast--warning {
    border-color: #ffc021;
  }
  
  .toast--warning .toast__icon {
    color: #ffc021;
  }
  
  .toast--error {
    border-color: #ff623d;
  }
  
  .toast--error .toast__icon {
    color: #ff623d;
  }
  
  .toast + .toast {
    margin-top: 24px;
  }
  
  .toast__icon {
    font-size: 24px;
  }
  
  .toast__icon,
  .toast__close {
    padding: 0 16px;
  }
  
  .toast__body {
    flex-grow: 1;
  }
  
  .toast__title {
    font-size: 16px;
    font-weight: 600;
    color: #333;
  }
  
  .toast__msg {
    font-size: 14px;
    color: #888;
    margin-top: 6px;
    line-height: 1.5;
  }
  
  .toast__close {
    font-size: 20px;
    color: rgba(0, 0, 0, 0.3);
    cursor: pointer;
  }
  /* end toast */
  .qty {
      width: 80px;
      text-align: center;
  }

  .sorting_disabled {
      width: 100px;
      text-align: center;
  }

  .odd {
      text-align: center;
  }

